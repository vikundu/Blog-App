<% include partials/header%>

<div class="ui main text container">
    <div class="ui huge header">Blog App</div>
    <div class="ui top attached segment" >
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image%>">
                    </div>
                    
                    <div class="content">
                        <a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
                        <div class="meta">
                            <span><%=blog.date.toDateString() %></span>
                        </div>
                        <div class="description">
                            <% if(blog.body && blog.body.length > 0) { %>
                                <div><%-blog.body.substring(0, 100)%>...</div>
                            <%}%>        
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">
                                Read more
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            
            <% }) %>            
        </div>
        
    </div>
    
</div>


<% include partials/footer%>